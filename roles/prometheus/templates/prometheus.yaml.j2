global:
  scrape_interval:     15s # By default, scrape targets every 15 seconds.
  evaluation_interval: 15s # By default, scrape targets every 15 seconds.

scrape_configs:

  - job_name: prometheus
    scrape_interval: 5s
    scrape_timeout: 5s
    static_configs:
      - targets: ['localhost:9090']

  - job_name: linux
    static_configs:
      - targets: 
        - {{ groups['application'][0] }}.{{ domain }}:{{ prometheus_jobs[0].port }}
        - {{ groups['application'][1] }}.{{ domain }}:{{ prometheus_jobs[0].port }}
        - {{ groups['internal'][0] }}.{{ domain }}:{{ prometheus_jobs[0].port }}

        #- shrshryo-1.{{ domain }}:{{ prometheus_jobs[0].port }}
        #- shrshryo-2.{{ domain }}:{{ prometheus_jobs[0].port }}
        #- shrshryo-3.{{ domain }}:{{ prometheus_jobs[0].port }}

